<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base chip -->
    <style name="Chip_Base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/bg_chip</item>
    </style>

    <style name="Chip_Normal" parent="Chip_Base" />

    <style name="Chip_Selected" parent="Chip_Base">
        <item name="android:background">@drawable/bg_chip_selected</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Optional base (only if referenced somewhere) -->
    <style name="Account" />

    <!-- Row card style for MaterialCardView -->
    <style name="Account.RowCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>

        <!-- These apply on MaterialCardView -->
        <item name="cardCornerRadius">14dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="strokeWidth">0dp</item>

        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

</resources>
