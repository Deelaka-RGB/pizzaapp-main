<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- bottom shadow -->
    <item android:top="2dp" android:left="1dp" android:right="1dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="#18000000"/> <!-- subtle shadow -->
        </shape>
    </item>

    <!-- main surface with gentle vertical gradient + stroke -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <gradient
                android:startColor="@color/black"
                android:endColor="@color/black"
                android:angle="90"/>
            <stroke android:width="1dp" android:color="#1A000000"/>
        </shape>
    </item>

    <!-- top highlight line -->
    <item android:top="0dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <gradient
                android:startColor="#22FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90"/>
        </shape>
    </item>
</layer-list>
