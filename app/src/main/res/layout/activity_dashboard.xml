<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Gradient background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_screen_gradient"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp"
        android:layerType="software"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"

                    android:scaleType="centerCrop"
                    android:src="@drawable/profile"
                    tools:src="@drawable/profile" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:id="@+id/txtNearestBranch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Detecting your nearest branchâ€¦"
                        android:textColor="@color/textSecondary"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/textPrimary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Favorite Food"
                        android:textSize="18sp"
                        android:textColor="@color/textSecondary"/>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnBell"
                    android:layout_width="48dp"
                    android:layout_height="48dp"

                    android:contentDescription="@string/app_name"
                    tools:src="@drawable/bell_icon" />
            </LinearLayout>

            <!-- Search + filter -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_search"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_search"/>

                    <EditText
                        android:id="@+id/edtSearch"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="@string/hint_search"
                        android:inputType="text"
                        android:imeOptions="actionSearch"
                        android:singleLine="true"
                        android:autofillHints="search" />

                </LinearLayout>

                <!-- ACTIONABLE -->
                <ImageButton
                    android:id="@+id/btnFilter"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_chip_selected"
                    android:contentDescription="@string/cd_filter"
                    android:padding="6dp"
                    app:srcCompat="@drawable/search_icon"
                    app:tint="@android:color/white"
                    tools:src="@drawable/search_icon" />

            </LinearLayout>

            <!-- Category chips -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:layout_marginTop="14dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView style="@style/Chip_Selected" android:text="All"/>
                    <TextView style="@style/Chip_Normal" android:text="Pizza"/>
                    <TextView style="@style/Chip_Normal" android:text="Burger"/>
                    <TextView style="@style/Chip_Normal" android:text="Sandwich"/>
                    <TextView style="@style/Chip_Normal" android:text="Drinks"/>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Popular section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Popular Food"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/txtSeeAllPopular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See All"
                    android:textColor="@color/brandRed"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPopular"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="10dp"
                android:overScrollMode="never"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"/>

            <TextView
                android:id="@+id/emptyView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:text="No items found"
                android:textSize="16sp"
                android:textColor="@color/textSecondary"
                android:visibility="gone"/>


            <!-- Nearest section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Nearest"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:textSize="18sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvNearest"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="90dp"
                android:orientation="horizontal"
                android:overScrollMode="never"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom pill navigation -->
    <LinearLayout
        android:id="@+id/bottomPill"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_bottom_pill"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <ImageButton
            android:id="@+id/navHome"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cd_nav_home"
            app:srcCompat="@drawable/btn_1"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/navHeart"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cd_nav_favorites"
            app:srcCompat="@drawable/btn_2"
            app:tint="@android:color/white"
            android:layout_marginStart="22dp" />

        <ImageButton
            android:id="@+id/navCart"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cd_nav_cart"
            app:srcCompat="@drawable/btn_3"
            app:tint="@android:color/white"
            android:layout_marginStart="22dp" />
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
