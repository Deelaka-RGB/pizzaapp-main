<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Scroll area -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <!-- HERO CARD -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/heroCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/imgPizza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxHeight="340dp"
                    android:scaleType="fitCenter"
                    android:padding="12dp"
                    android:background="@drawable/bg_round_16"
                    android:contentDescription="@string/app_name"
                    app:srcCompat="@drawable/pizza_10"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- NAME -->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Margherita"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#FF111111"
                app:layout_constraintTop_toBottomOf="@id/heroCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- SUBTITLE -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Classic Pizza"
                android:textSize="14sp"
                android:textColor="#99000000"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- RATING ROW -->
            <LinearLayout
                android:id="@+id/rowRating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:srcCompat="@drawable/ic_star_24"
                    android:contentDescription="@null"/>

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 4.8 (124)"
                    android:textColor="#FF444444"
                    android:textSize="13sp"/>
            </LinearLayout>

            <!-- PRICE + QTY -->
            <LinearLayout
                android:id="@+id/rowPriceQty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/rowRating"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- PRICE -->
                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rs 1,590.00"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#FF111111"/>

                <!-- QTY CHIP -->
                <LinearLayout
                    android:id="@+id/qtyChip"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:background="@drawable/bg_neumorphic_chip">

                    <TextView
                        android:id="@+id/btnMinus"
                        android:layout_width="36dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="âˆ’"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/tvQty"
                        android:layout_width="44dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="1"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/btnPlus"
                        android:layout_width="36dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="+"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- ADD TO CART BUTTON -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddToCart"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:text="Add to cart"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                android:backgroundTint="@android:color/transparent"
                app:iconTint="@android:color/holo_red_dark"
                app:layout_constraintTop_toBottomOf="@id/rowPriceQty"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
