<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- HERO IMAGE: no crop -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/heroCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:useCompatPadding="true">

        <ImageView
            android:id="@+id/imgPizza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="340dp"
            android:scaleType="fitCenter"
        android:padding="12dp"
        android:background="@drawable/bg_round_16"
        android:contentDescription="@string/app_name"
        tools:src="@drawable/pizza_10"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- NAME + SUBTITLE -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Margherita"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#FF111111"/>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Classic Pizza"
        android:textSize="14sp"
        android:textColor="#99000000"
        android:layout_marginTop="2dp"/>

    <!-- RATING ROW -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_star_24"/>

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 4.8 (124)"
            android:textColor="#FF444444"
            android:textSize="13sp"/>
    </LinearLayout>

    <!-- PRICE + QTY + ADD TO CART -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rs 1,590.00"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FF111111"/>

        <!-- qty chip -->
        <LinearLayout
            android:id="@+id/qtyChip"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/bg_neumorphic_chip">

            <TextView
                android:id="@+id/btnMinus"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="âˆ’"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tvQty"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/btnPlus"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="+"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="14dp"
        android:text="Add to cart"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:background="@color/background_dark"/>
</merge>
