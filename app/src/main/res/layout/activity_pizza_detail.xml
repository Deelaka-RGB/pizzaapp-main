<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen_gradient"
    tools:context=".PizzaDetailActivity">

    <!-- Curved header -->
    <FrameLayout
        android:id="@+id/header"
        android:layout_width="401dp"
        android:layout_height="88dp"
        android:background="@drawable/bg_home_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/ic_round_arrow_back_24" />

        <TextView
            android:id="@+id/tvHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Pizza Details"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
    </FrameLayout>

    <!-- Content card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:strokeColor="#10FFFFFF"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:backgroundTint="@color/brandRedLight">

                <ImageView
                    android:id="@+id/imgPizza"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_round_16"
                    android:src="@drawable/ic_image_placeholder"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Margherita"
                    android:textStyle="bold"
                    android:textSize="22sp"/>

                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Classic Pizza"
                    android:textSize="13sp"
                    android:alpha="0.8"/>

                <!-- Rating row -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_star_24"/>
                    <TextView
                        android:id="@+id/tvRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 4.8"
                        android:textSize="13sp"
                        android:alpha="0.85"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Fresh mozzarella, basil, ripe tomatoes. Thin, crispy base baked to perfection."
                    android:textSize="14sp"/>

                <!-- Price + qty -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rs 1,590.00"
                        android:textStyle="bold"
                        android:textSize="20sp"/>

                    <!-- qty stepper -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/bg_round_16"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp">

                        <TextView
                            android:id="@+id/btnMinus"
                            android:layout_width="36dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="âˆ’"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/tvQty"
                            android:layout_width="44dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="1"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/btnPlus"
                            android:layout_width="36dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="+"
                            android:textSize="20sp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

    <!-- Bottom bar: Add to cart -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_bottom_pill"
        android:padding="14dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total: Rs 1,590.00"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btnAddToCart"
            android:layout_width="160dp"
            android:layout_height="56dp"
            android:background="@drawable/orange_bg"
            android:text="Add to cart"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:backgroundTint="@color/brandRedLight"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
