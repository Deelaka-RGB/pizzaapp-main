<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top red panel with rounded bottom -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/bg_round_red_bottom">

            <!-- Back -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:contentDescription="@string/back"
                app:cornerRadius="18dp"
                app:icon="@drawable/ic_round_arrow_back_24"
                app:iconTint="@android:color/black"
                android:backgroundTint="@android:color/white" />

            <!-- More -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMore"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:layout_margin="16dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:contentDescription="@string/more_options"
                app:cornerRadius="18dp"
                app:icon="@drawable/ic_round_more_vert_24"
                app:iconTint="@android:color/white"
                android:backgroundTint="#33FFFFFF" />

            <!-- Food image floating -->
            <ImageView
                android:id="@+id/imgHero"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:contentDescription="@string/cd_food_image"
                tools:src="@drawable/pizza_1" />
        </FrameLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/textPrimary"
                    tools:text="Hamburger" />

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    tools:text="Rs. 250.0" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textSecondary"
                android:layout_marginTop="4dp"
                tools:text="Burger" />

            <!-- Tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/tabDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:text="@string/details"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_chip_red_selected" />

                <TextView
                    android:id="@+id/tabReviews"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:text="@string/reviews"
                    android:textColor="@color/textPrimary"
                    android:background="@drawable/bg_chip_neutral" />
            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/txtDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="@string/lorem_food_desc"
                android:textColor="@color/textSecondary" />

            <!-- Quantity + Add to Cart -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/qtyBox"
                    android:layout_width="120dp"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_qty_pill"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btnMinus"
                        android:layout_width="44dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="â€“"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/textPrimary"
                        android:contentDescription="@string/minus" />

                    <TextView
                        android:id="@+id/txtQty"
                        android:layout_width="32dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"
                        tools:text="1" />

                    <TextView
                        android:id="@+id/btnPlus"
                        android:layout_width="44dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="+"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/textPrimary"
                        android:contentDescription="@string/plus" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddToCart"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="@string/add_to_cart"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:contentDescription="@string/add_to_cart"
                    app:cornerRadius="24dp"
                    app:backgroundTint="@color/red" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
