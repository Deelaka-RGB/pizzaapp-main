<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pizzaapp">

    <!-- Network (Firebase/Glide) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Location (only if your app really uses it) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Image picking permissions:
         - Android 13+ (API 33+): READ_MEDIA_IMAGES
         - Android 12 and below: READ_EXTERNAL_STORAGE
         WRITE_EXTERNAL_STORAGE is deprecated; don't request it on 29+ -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PizzaMania">

        <!-- Launcher / Splash -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Auth screens -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Make sure the class name matches your file exactly:
             if it's SignUpActivity.java, keep as below; if SignUp.java, change accordingly -->
        <activity
            android:name=".SignUpActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Home / Dashboard -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Cart -->
        <activity
            android:name=".CartActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Pizza details -->
        <activity
            android:name=".PizzaDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Profile editor (add this so your EditProfileActivity works) -->
        <activity
            android:name=".AccountActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity android:name=".EditProfileActivity" android:exported="false" />

        <!-- AndroidManifest.xml (inside <application> ... ) -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".PickupActivity"/>
        <activity android:name=".DeliveryActivity"/>

        <!-- Firebase hooks in automatically via google-services.json -->

    </application>
</manifest>
